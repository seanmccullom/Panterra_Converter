# hasnt been tested

mkdir ~/.git/
mkdir ~/.git/Panterra_converter/

mv Greeting_converter ~/.git/Panterra_converter/
mv Ringtone_converter ~/.git/Panterra_converter/
mv pcon ~/.git/Panterra_converter/

ln -s ~/.git/Panterra_converter/Greeting_converter /usr/bin/Greeting_converter
ln -s ~/.git/Panterra_converter/Ringtone_converter /usr/bin/Ringtone_converter
ln -s ~/.git/Panterra_converter/pcon /usr/bin/pcon

chmod u+x ~/.git/Panterra_converter/Greeting_converter
chmod u+x ~/.git/Panterra_converter/Ringtone_converter
chmod u+x ~/.git/Panterra_converter/pcon 

