if [[ "$1" == "" ]]
then
echo BAD INPUT
echo Example Entry: pcon hold_music.wav
exit
fi
if [[ $1 == *.wav ]]
then
#x="$1"
#y=${x%.*}
a="$1"
b=$(basename $a)
c=${b%.*}
echo Converting wav file
sox $a -r 8000 -c 1 -b 16 -e u-law -S ULAW_$c.wav trim 00:01 00:40 && rm $a
echo Conversion Completed
else
#x="$1"
#y=${x%.*}
x="$1"
y=$(basename $x)
z=${y%.*}
echo Attempting to convert file
echo $1
sox $x -r 8000 -c 1 -e u-law -S ULAW_$z.wav trim 00:01 00:40 && rm $x
fi

